		  // printf("check gem 3  %d %d \n",g3,clusters->hits[g3].GEMid);
		  if (clusters->hits[g3].GEMid!=t*3+2) continue;
		  x[2] = clusters->hits[g3].xl*0.4-50.; y[2] = clusters->hits[g3].yl*0.4-50.;

